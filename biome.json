{
   "$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
   "vcs": {
      "enabled": true,
      "clientKind": "git",
      "useIgnoreFile": true
   },
   "files": {
      "ignoreUnknown": false
   },
   "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 3,
      "lineWidth": 110
   },
   "linter": {
      "enabled": true,
      "rules": {
         "recommended": true,
         "style": {
            "noNonNullAssertion": "off"
         },
         "suspicious": {
            "noExplicitAny": "off"
         }
      }
   },
   "javascript": {
      "formatter": {
         "quoteStyle": "double",
         "semicolons": "always"
      }
   },
   "assist": {
      "enabled": true,
      "actions": {
         "source": {
            "organizeImports": "off"
         }
      }
   }
}
